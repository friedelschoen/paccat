output {
    name = "textselect",

    fetch = (import ./name.pcr) (name="hello", world="1"),

    repo = output ''
        git clone https://github.com/friedelschoen/textselect.git {{ $out }}
        rm -rf {{ $out }}/.git
    '',

    depends = [
        import ./dwm.pcr
    ],

    script = ''
        {{ $fetch }}
        printenv
        cd {{ $repo }}
        make
        mkdir -p {{ $out }}/bin {{ $out }}/share/man/man1
        make PREFIX={{ $out }} install
    ''
}
